{% extends "::base.html.twig" %}

{% block title %}AppBundle:Post:show{% endblock %}

{% block body %}


{% for error in errors %}
<div class="alert alert-danger">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>Error!</strong><br> {{ error.message }}
</div>
{% endfor %}

	<div class="panel panel-info">
		<div class="panel-heading">
			<h3 class="panel-title">{{ post.title }}</h3>
		</div>
		<div class="panel-body">
			{% if post.path %}
                <img class = 'img-rounded' src="{{ asset(post.path) }}" whidth = 250 height = 250>
            {% endif %}<br>
			{{ post.content }}
		</div>
	</div>
<hr>

{% for comment in post.comments %}
<ul>
	<li>
		<span class="label label-default">{{ comment.author }}</span>
		<p>{{ comment.comment }}</p>
	</li>
</ul>
{% endfor %}

<hr>
<form action="" method="POST" class="form-horizontal" role="form">
		<div class="form-group">
			<legend>Comment</legend>
		</div>

			<div class="form-group">
						<label for="textareaComment" class="col-sm-2 control-label">Comment:</label>
						<div class="col-sm-10">
							<textarea name="comment" id="textareaComment" class="form-control" rows="3" ></textarea>
						</div>
					</div>		

		<div class="form-group">
			<div class="col-sm-10 col-sm-offset-2">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</div>
</form>



{% endblock %}
